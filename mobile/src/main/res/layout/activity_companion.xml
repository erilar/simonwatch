<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CompanionActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send Message To Watch"
        android:id="@+id/send_message"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_alignParentStart="true"
        android:onClick="onSendMessageToWatch"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/message_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message recieved from watch:"
        android:layout_below="@+id/send_message"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_label"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
